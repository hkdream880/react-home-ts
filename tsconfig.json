{
    "compilerOptions": {
        "strict": true,
        "lib": [
            "ES5",
            "ES6",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2020",
            "DOM"
        ],
        "jsx": "react",
        "skipLibCheck": true,
        "target": "ES6",
        "experimentalDecorators": true,
        "moduleResolution": "Node"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ],
}